{
  "name": "@json-express/context-builder",
  "version": "0.1.3",
  "type": "module",
  "description": "A cli tool to build your project context that can be uploaded to ai when chatting",
  "bin": {
    "context-builder": "./dist/index.js"
  },
  "scripts": {
    "dev": "vite-node src/index.js",
    "dev:link": "npm link",
    "dev:unlink": "npm unlink -g @json-express/context-builder",
    "build": "vite build",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["cli", "tool", "context", "build", "context-builder", "context build", "ai"],
  "author": "vaz",
  "license": "MIT",
  "dependencies": {
    "ignore": "^7.0.5"
  },
  "devDependencies": {
    "vite": "^7.1.7",
    "vite-node": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vaz-matri/context-builder.git"
  },
  "bugs": {
    "url": "https://github.com/vaz-matri/context-builder/issues"
  }
}
